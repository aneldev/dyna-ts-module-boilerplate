{
  "name": "dyna-ts-module-boilerplate",
  "version": "4.5.7",
  "description": "Boilerplate for node apps/modules",
  "repository": {
    "type": "git",
    "url": "http://github.com/aneldev/dyna-ts-module-boilerplate"
  },
  "private": false,
  "sideEffects": false,
  "source": "src/index.ts",
  "types": "dist/commonJs/index.d.ts",
  "main": "dist/commonJs/index.js",
  "esnext": "dist/esNext/index.ts",
  "scripts": {
    "create": "echo Creation started... && yarn run .creation-prepare && echo --- module created",
    ".creation-prepare": "rm -rf .git; rm -rf yarn.lock mv README.md README.boilerplate.md; echo \\# readme > README.md && yarn run .creation-install",
    ".creation-install": "yarn install && yarn run .creation-done",
    ".creation-done": "node _boilerplateCreateModule.js && echo --- module created, set the name, version and repo address in package.json",
    "lint": "eslint .",
    "debug-dev-browser": "webpack-dev-server --config webpack.debug-dev.browser.config.js --devtool eval --progress --open / --host 127.0.0.1 --port 3300",
    "debug-dev-browser-at": "yarn debug-dev-browser --port",
    "debug-dev-build": "rm -rf ./debug-ground/debug-dev-on-nodejs/*; webpack --config webpack.debug-dev.nodejs.config.js --watch",
    "debug-dev-devtools": "node --inspect --expose-gc --optimize_for_size --max_old_space_size=460 --gc_interval=100 --trace-warnings ./debug-ground/debug-dev-on-nodejs/index.js && yarn run debug-dev-devtools",
    "debug-dev-devtools-brk": "node --inspect-brk --expose-gc --optimize_for_size --max_old_space_size=460 --gc_interval=100 --trace-warnings ./debug-ground/debug-dev-on-nodejs/index.js && yarn run debug-dev-devtools-brk",
    "debug-dev-run": "node --expose-gc --expose-gc --optimize_for_size --max_old_space_size=460 --gc_interval=100 --trace-warnings ./debug-ground/debug-dev-on-nodejs/index.js",
    "debug-tests": "yarn debug-jest",
    "debug-jest": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "analyze": "set NODE_ENV=development && webpack --config webpack.dist.analyze.config.js",
    "build": "rm -rf ./dist && tsc --p tsconfig.commonJs.json && tsc --p tsconfig.esNext.json",
    "build-watch-commonJs": "rm -rf ./dist/commonJs && tsc --watch --p tsconfig.commonJs.json",
    "build-watch-esNext": "rm -rf ./dist/esNext && tsc --watch --p tsconfig.esNext.json",
    "test": "jest --coverage --no-cache --runInBand",
    "test-no-coverage": "jest --no-cache --runInBand",
    "test-watch": "jest --watch --verbose --runInBand",
    "commit": "git add -u && git add -A && git commit --allow-empty -m",
    "commit-amend": "git add -u && git add -A && git commit --amend --allow-empty --no-edit",
    "publish-push": "yarn publish --non-interactive && git push && git push --tags",
    "sync-usages": "node sync-usages.js",
    "sync-usages-watch": "node sync-usages.js --watch",
    "release": "yarn test && yarn run build && git add -u && git add -A && git commit --allow-empty -m \"Build changes\" && yarn version --patch && yarn run publish-push",
    "upgrade-release": "yarn upgrade && yarn run release"
  },
  "keywords": [],
  "author": "Anel dev",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.1.0",
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^27.0.1",
    "@types/node": "^10.12.2",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "autoprefixer": "^7.2.6",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.1.0",
    "chokidar": "^3.4.0",
    "circular-dependency-plugin": "^5.2.2",
    "dyna-guid": "^1.0.10",
    "dyna-node-arguments": "^2.0.1",
    "dyna-node-console": "^1.0.7",
    "dyna-node-fs": "^1.0.4",
    "enzyme": "^3.7.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^7.32.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^5.5.0",
    "identity-obj-proxy": "^3.0.0",
    "image-webpack-loader": "^8.0.1",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "jest-junit": "^12.0.0",
    "jest-localstorage-mock": "^2.4.0",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "source-map-loader": "0.1.5",
    "ts-jest": "^26.4.3",
    "ts-loader": "^9.2.5",
    "typescript": "^4.3.2",
    "webpack": "^5.64.1",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-middleware": "^5.2.2",
    "webpack-dev-server": "^4.5.0",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./tests/setup/testSetup.ts"
    ],
    "automock": false,
    "collectCoverage": false,
    "testEnvironment": "jest-environment-node",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(src|tests)/.*\\.(test|spec)\\.(ts|tsx|js|jsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|jpg|png|svg|gif)$": "identity-obj-proxy"
    },
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js,jsx}",
      "!src/**/*.d.ts"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "jest-junit": {
    "output": "./coverage/junit.xml"
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/member-delimiter-style": [
        "warn",
        {
          "multiline": {
            "delimiter": "semi",
            "requireLast": true
          },
          "singleline": {
            "delimiter": "semi",
            "requireLast": false
          }
        }
      ],
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-empty-interface": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/prefer-namespace-keyword": "warn",
      "@typescript-eslint/semi": [
        "warn",
        "always"
      ],
      "@typescript-eslint/type-annotation-spacing": "warn",
      "@typescript-eslint/no-unused-expressions": "off",
      "@typescript-eslint/no-inferrable-types": "off",
      "brace-style": [
        "warn",
        "stroustrup"
      ],
      "no-extra-boolean-cast": [
        "warn"
      ],
      "comma-dangle": [
        "warn",
        "always-multiline"
      ],
      "eqeqeq": [
        "warn",
        "smart"
      ],
      "id-blacklist": [
        "warn",
        "any",
        "Number",
        "number",
        "String",
        "string",
        "Boolean",
        "boolean",
        "Undefined",
        "undefined"
      ],
      "id-match": "error",
      "indent": [
        1,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "no-eval": "error",
      "no-mixed-operators": "error",
      "no-trailing-spaces": "warn",
      "no-underscore-dangle": "off",
      "no-unsafe-finally": "error",
      "no-var": "warn",
      "semi": "warn",
      "object-curly-spacing": [
        "warn",
        "never"
      ],
      "spaced-comment": [
        "warn",
        "always",
        {
          "markers": [
            "/"
          ]
        }
      ],
      "switch-colon-spacing": [
        "warn",
        {
          "after": true,
          "before": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "*.js",
    "*.d.ts"
  ]
}
